<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_holo_dark</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="DarkTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:buttonStyle">@style/DarkButton</item>
        <item name="android:editTextBackground">@drawable/textfield_activated_holo_dark</item>
        <item name="android:divider">@color/light_gray</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_background</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_holo_dark</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="DarkButton">
        <item name="android:background">@drawable/btn_dark</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:height">@dimen/send_button_height</item>
    </style>



    <style name="DarkThemeRed" parent="DarkTheme">
        <item name="android:editTextBackground">@drawable/textfield_activated_holo_dark_red</item>
    </style>
    <style name="DarkThemeOrange" parent="DarkTheme">
        <item name="android:editTextBackground">@drawable/textfield_activated_holo_dark_orange</item>
    </style>

    <style name="DarkThemeYellow" parent="DarkTheme">
        <item name="android:editTextBackground">@drawable/textfield_activated_holo_dark_yellow</item>
    </style>

    <style name="DarkThemeGreen" parent="DarkTheme">
        <item name="android:editTextBackground">@drawable/textfield_activated_holo_dark_green</item>
    </style>

    <style name="DarkThemeBlue" parent="DarkTheme">
        <item name="android:editTextBackground">@drawable/textfield_activated_holo_dark_blue</item>
    </style>

    <style name="DarkThemePurple" parent="DarkTheme">
        <item name="android:editTextBackground">@drawable/textfield_activated_holo_dark_purple</item>
    </style>

    <style name="DarkThemeTurquoise" parent="DarkTheme">
        <item name="android:editTextBackground">@drawable/textfield_activated_holo_dark_turquoise</item>
    </style>




    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_holo_dark</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!--        <item name="android:background">@color/white</item>-->
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppThemeRed" parent="AppTheme">
        <item name="android:editTextBackground">@drawable/textfield_activated_holo_light_red</item>
    </style>
    <style name="AppThemeOrange" parent="AppTheme">
        <item name="android:editTextBackground">@drawable/textfield_activated_holo_light_orange</item>
    </style>

    <style name="AppThemeYellow" parent="AppTheme">
        <item name="android:editTextBackground">@drawable/textfield_activated_holo_light_yellow</item>
    </style>

    <style name="AppThemeGreen" parent="AppTheme">
        <item name="android:editTextBackground">@drawable/textfield_activated_holo_light_green</item>
    </style>

    <style name="AppThemeBlue" parent="AppTheme">
        <item name="android:editTextBackground">@drawable/textfield_activated_holo_light_blue</item>
    </style>

    <style name="AppThemePurple" parent="AppTheme">
        <item name="android:editTextBackground">@drawable/textfield_activated_holo_light_purple</item>
    </style>

    <style name="AppThemeTurquoise" parent="AppTheme">
        <item name="android:editTextBackground">@drawable/textfield_activated_holo_light_turquoise</item>
    </style>




    <!-- HELP STYLES -->

    <!-- Styles for views -->
    <style name="HelpButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@null</item>
    </style>

    <style name="HelpButton.Dark">
        <item name="android:textColor">@color/black</item>
    </style>


</resources>
